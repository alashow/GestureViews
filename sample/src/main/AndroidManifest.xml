<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexvasilkov.gestures.sample">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:name=".SampleApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="GestureViews"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="Gesture Views">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex1ImageViewSampleActivity"
            android:label="Images in ViewPager"
            android:theme="@style/AppTheme.Full.NoTitle.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex2FrameLayoutSampleActivity"
            android:label="Layouts in ViewPager"
            android:theme="@style/AppTheme.FrameLayout">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex3CustomViewSampleActivity"
            android:label="Custom view">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex4SingleImageAnimationActivity"
            android:label="Rounded image">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex5ListTransitionActivity"
            android:label="ListView transitions">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex6AdvancedDemoActivity"
            android:label="Advanced demo"
            android:theme="@style/AppTheme.Full.NoTitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex7CrossActivityFrom"
            android:label="Cross activities animation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.Ex7CrossActivityTo"
            android:label="New activity"
            android:theme="@style/AppTheme.Transparent" />

        <activity
            android:name=".activities.PhotoCropActivity"
            android:label="Rotate &amp; crop"
            android:theme="@style/AppTheme.Full.NoTitle.Dark" />

        <activity
            android:name=".activities.PhotoCropResultActivity"
            android:label="Cropped"
            android:theme="@style/AppTheme.Full.NoTitle.Dark" />

    </application>

</manifest>
